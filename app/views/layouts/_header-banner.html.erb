<header class="ccs-header" role="banner" data-module="ccs-header">
  <div class="ccs-header__container govuk-width-container">
    <div class="ccs-header__logo">
      <a href="https://www.crowncommercial.gov.uk" class="ccs-header__link ccs-header__link--homepage" aria-label="Crown Commercial Service">
        <%= render partial: '/layouts/logo' %>
      </a>
    </div>
    <div class="ccs-header__content">
      <span class="ccs-header__link--service-name">
        Sign in to the Print Marketplace
      </span>
      <% unless current_page?('/')  %>
        <nav aria-label="Menu" class="ccs-header__navigation">
          <button type="button" class="ccs-header__menu-button ccs-js-header-toggle" aria-controls="navigation" aria-label="Show or hide menu">Menu</button>
          <div id="navigation" class="ccs-header__navigation-lists">
            <ul id="navigation-primary" class="ccs-header__navigation-primary-list ccs-header__navigation--no-second-list">
              <li class="ccs-header__navigation-item">
                <%= link_to "Back to start", home_path, class: 'ccs-header__link' %>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>
    </div>
  </div>
</header>
