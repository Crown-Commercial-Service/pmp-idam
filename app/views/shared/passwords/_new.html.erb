<%= content_for :page_title, t("base.passwords.new.heading") %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  <% if !flash[:error].nil? %>
    <div id="ccs-error-sum" class="govuk-error-summary <%= 'govuk-visually-hidden' if flash[:error].nil? %> ccs-e-msg" aria-labelledby="error-summary-title" role="alert" data-module="error-summary">
      <h2 class="govuk-error-summary__title" id="error-summary-title">
        <%= t('common.error_summary_title') unless flash[:error].nil? %>
      </h2>
      <div class="govuk-error-summary__body">
        <ul id="ccs-error-sum-list" class="govuk-list govuk-error-summary__list">
          <% if flash[:error] %>
            <li>
              <%= link_to flash[:error], "##{error_id('email')}" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>



    <h1 class="govuk-heading-xl">
      <%= t('base.passwords.new.heading') %>
    </h1>

    <p class="govuk-body-l">
      <%= t('base.passwords.new.lead') %>
    </p>

    <%= form_tag local_new_path, class: 'ccs-form', id: 'cog_forgot_password_request_form', specialvalidation: true, novalidate: true, method: :post do %>

      <div class="govuk-form-group <%= 'govuk-form-group--error' if flash[:error].present? %>">
        <label class="govuk-label govuk-label--m govuk-!-margin-bottom-0" for="email">
          <%= t('base.passwords.new.email') %>
        </label>

        <span id="email-hint" class="govuk-hint govuk-!-width-three-quarters">
          <%= t('base.passwords.new.email_hint_html') %>
        </span>

        <% if flash[:error].present?%>
          <span id="email-error" class="govuk-error-message govuk-!-margin-top-3">
            <%= flash[:error] %>
          </span>
        <% end %>
        <input class="govuk-input govuk-!-width-three-quarters" id="email" name="email" type="email" aria-describedby="email-hint" autocomplete="off" spellcheck="false">
      </div>

      <%= submit_tag t('common.send_reset_email'), id: "submit", class: "govuk-button govuk-!-padding-left-7 govuk-!-padding-right-7", 'aria-label': "#{t('common.send_reset_email')}" %>

    <% end %>



  </div>
</div>
