<% if PmpIdam.google_analytics_tracking_id.present? %>
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= PmpIdam.google_analytics_tracking_id %>">
  </script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= PmpIdam.google_analytics_tracking_id %>');
  </script>
  <!-- End Google Analytics -->
<% end %>